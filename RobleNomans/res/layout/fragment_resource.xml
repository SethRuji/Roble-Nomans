<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="100dp"
        android:src="@drawable/coin_icon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:src="@drawable/wood_icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="88dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/iron_icon" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:scaleType="fitCenter"
        android:src="@drawable/grain_icon" />

    <TextView
        android:id="@+id/textView_gold_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/imageView2"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_gold_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_gold_rate"
        android:layout_toRightOf="@+id/imageView2"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView_wood_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"         
        android:layout_toRightOf="@+id/imageView4"        
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_wood_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_wood_rate"
        android:layout_toRightOf="@+id/imageView4"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView_iron_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"         
        android:layout_toRightOf="@+id/imageView4"        
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_iron_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_iron_rate"
        android:layout_toRightOf="@+id/imageView3"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView_wheat_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"         
        android:layout_toRightOf="@+id/imageView1"        
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_wheat_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_wheat_rate"
        android:layout_toRightOf="@+id/imageView1"
        android:text="TextView" />
</RelativeLayout>