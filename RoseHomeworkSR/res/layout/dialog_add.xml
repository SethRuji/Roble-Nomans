<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp" >
 
    <EditText
    	android:id="@+id/dialogAddName"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:ems="10"
    	android:hint="@string/enter_the_name_of_the_task" >
        <requestFocus />
    </EditText>
 
    <EditText
    	android:id="@+id/dialogAddCourse"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:ems="10"
    	android:hint="@string/enter_the_course" />
 
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/date_due"
    	android:textSize="22sp" />
 
    <DatePicker
    	android:id="@+id/dialogAddDueDatePicker"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:calendarViewShown="false" />
</LinearLayout>